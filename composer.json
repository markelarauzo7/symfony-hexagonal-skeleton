{
    "name": "markelarauzo7/symfony-hexagonal-skeleton",
    "description": "Hexagonal Architecture skeleton using symfony",
    "keywords": ["symfony", "hexagonal-architecture", "ports-and-adapters", "skeleton", "scaffolding" ],
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "symfony-bundles/json-request-bundle": "^4.0.0",
        "symfony/asset": "^5.2.0",
        "symfony/console": "^5.2.0",
        "symfony/dotenv": "^5.2.0",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "^5.2.0",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/templating": "^5.2.0",
        "symfony/translation": "^5.2.0",
        "symfony/twig-bundle": "^5.2",
        "symfony/validator": "^5.2.0",
        "symfony/yaml": "^5.2.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Project\\": "src/",
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "config-dir": "app/config",
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "nelmio/api-doc-bundle": "^4.2",
        "phpstan/phpstan": "^0.12.87",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^5.2.0",
        "symfony/css-selector": "^5.2.0",
        "symfony/var-dumper": "^5.2.0"
    }
}
